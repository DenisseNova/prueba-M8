<div class="py-4">
  {{> Subtitle text='Registro' }}
  <form>
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6" id="email">
        <label>Email</label>
        <input class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-6" id="nombre">
        <label>Nombre</label>
        <input class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-6" id="password">
        <label>Password</label>
        <input class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-6" id="repita" >
        <label>Repita la password</label>
        <input class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-6" id="experiencia">
        <label>Años de experiencia</label>
        <input class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-6" id="especialidad">
        <label>Especialidad</label>
        <input class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-12" id="perfil">
        <label>Foto de perfil</label>
        <input type="file" />
      </div>
    </div>
    <button class="btn btn-info mb-3">Registrarme</button>
    <p><a href="/login"> Iniciar sesión</a></p>
  </form>
</div>

<script>

  $('button').click(async () => {
    const email = $('#email').val()
    const nombre = $('#nombre').val()
    const password = $('#password').val()
    const repita = $('#repita').val()
    const experiencia = $('#experiencia').val()
    const especialidad = $('#especialidad').val()
    const perfil = $('#perfil').val()

    const payload = { email, nombre, password, repita, experiencia, especialidad, perfil }

    try {
      await axios.post('/', payload)
      alert('Usuario registrado con exito')

      window.location.href = '/login'
    }
    catch({ response }) {
      const { data } = response
      const { error } = data
      alert(error)
    }
  })

</script>